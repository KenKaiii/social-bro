# PostgreSQL Database URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# For production with connection pooling, use a pooler like PgBouncer
DATABASE_URL="postgresql://postgres:password@localhost:5432/social_bro"

# Encryption secret for API keys stored in the database
# Generate with: openssl rand -base64 32
ENCRYPTION_SECRET="your-secret-here"

# NextAuth secret for session encryption
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"

# NextAuth URL - your application's base URL (required for auth redirects and invite links)
NEXTAUTH_URL="http://localhost:3000"

# Admin secret for the invite API endpoint (required)
# Generate with: openssl rand -base64 32
ADMIN_SECRET="your-admin-secret-here"

# Public app URL (used for OpenRouter API referer header)
# In production, set this to your domain
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional: API keys (users can also configure these in Settings)
# YOUTUBE_API_KEY=""
# OPENROUTER_API_KEY=""
# RAPIDAPI_KEY=""
